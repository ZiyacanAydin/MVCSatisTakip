@model MVCSatisTakip.Models.tbl_Satis 
@{
    ViewBag.Title = "satisgetir";
}

@using (Html.BeginForm("Guncelle", "Satis", FormMethod.Post))
            {
                <div class="form-group">
                    @Html.LabelFor(m => m.satisId)
                    @Html.TextBoxFor(m => m.satisId, new { @class = "form-control", @readonly = "readonly" })
                    <label>Müşteri</label>
                    @Html.DropDownListFor(m => m.tbl_Musteri.musteriId, (List<SelectListItem>)ViewBag.mus, new { @class = "form-control" })

                    <label>Ürün</label>
                    @Html.DropDownListFor(m => m.tbl_Urun.urunId, (List<SelectListItem>)ViewBag.urn, new { @class = "form-control" })

                    <label>Adet</label>
                    @Html.TextBoxFor(m => m.satisAdet, new { @class = "form-control" })

                    <label>Fiyat</label>
                    @Html.TextBoxFor(m => m.satisFiyat, new { @class = "form-control" })

                    <label>Tarih</label>
                    @Html.TextBoxFor(m => m.satisTarih, new { @class = "form-control", @readonly = "readonly" })
                </div>
                <div style="margin-top:15px;">
                    <button class="btn btn-info">Satış Güncelle</button>
                </div>
            }

